{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "luabind",
      "displayName": "luabind",
      "description": "Configure debug build of a luabind library",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "LUABIND_TESTS": "ON"
      }
    },
    {
      "name": "unit_tests",
      "inherits": "luabind",
      "cacheVariables": {
        "LUABIND_UNIT_TESTS": "ON"
      }
    },
    {
      "name": "benchmarks",
      "inherits": "luabind",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "LUABIND_BENCHMARKS": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "unit_tests",
      "displayName": "Unit tests",
      "configurePreset": "unit_tests"
    },
    {
      "name": "benchmarks",
      "displayName": "Benchmarks",
      "configurePreset": "benchmarks"
    }
  ],
  "testPresets": [
    {
      "name": "unit_tests",
      "displayName": "Unit Tests",
      "configurePreset": "unit_tests",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": false
      }
    },
    {
      "name": "benchmarks",
      "displayName": "Benchmarks",
      "configurePreset": "benchmarks",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": false
      }
    }
  ]
}
